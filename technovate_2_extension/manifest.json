
{
  "manifest_version": 3,
  "name": "CO2 Emission Checker",
  "version": "1.0",
  "description": "Sustainable Product Recommendation.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "*://*/*"
  ]
}
